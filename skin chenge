local Players = game:GetService("Players")
local InsertService = game:GetService("InsertService")

-- ★ここに使いたいアバター（バンドル）のIDを入力（例：Redcliff Knightなど）
local BUNDLE_ID = 300926 -- これは「Knights of Redcliff」の例

local function applyBundleSkin(bundleId)
	local success, description = pcall(function()
		return InsertService:GetHumanoidDescriptionFromBundleId(bundleId)
	end)

	if success then
		local character = Players.LocalPlayer.Character or Players.LocalPlayer.CharacterAdded:Wait()
		local humanoid = character:FindFirstChildOfClass("Humanoid")
		if humanoid then
			humanoid:ApplyDescription(description)
			print("✅ バンドルのスキンを適用しました。")
		end
	else
		warn("❌ バンドルの取得に失敗しました：", description)
	end
end

-- キャラ生成時に自動でスキン適用
Players.LocalPlayer.CharacterAdded:Connect(function()
	applyBundleSkin(BUNDLE_ID)
end)

-- すでにキャラがある場合は即時適用
if Players.LocalPlayer.Character then
	applyBundleSkin(BUNDLE_ID)
end
